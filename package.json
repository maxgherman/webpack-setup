{
  "name": "webpack-setup",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "type:check": "tsc --noEmit",
    "type:check:watch": "npm run type-check -- --watch",
    "lint": "npm run lint:sources && npm run lint:styles",
    "lint:sources": "eslint './src/**/*.ts' --max-warnings=0",
    "lint:fix:sources": "npm run lint:sources -- --fix",
    "lint:styles": "stylelint 'src/**/*.css' 'src/**/*.pcss'",
    "lint:fix:styles": "npm run lint:styles -- --fix",
    "build:dev": "cross-env TS_NODE_PROJECT=\"./webpack/tsconfig.json\" NODE_ENV=development webpack --config ./webpack/webpack.config.dev.ts",
    "start": "cross-env TS_NODE_PROJECT=\"./webpack/tsconfig.json\" NODE_ENV=development webpack-dev-server --config ./webpack/webpack.config.dev.ts",
    "build:prod": "cross-env TS_NODE_PROJECT=\"./webpack/tsconfig.json\" NODE_ENV=production webpack --config ./webpack/webpack.config.ts",
    "start:prod": "npx http-server ./dist -p 8080",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "7.9.0",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-runtime": "7.9.0",
    "@babel/preset-env": "7.9.0",
    "@babel/preset-typescript": "7.9.0",
    "@babel/runtime-corejs3": "7.9.2",
    "@types/clean-webpack-plugin": "0.1.3",
    "@types/html-webpack-plugin": "3.2.2",
    "@types/mini-css-extract-plugin": "0.9.1",
    "@types/node": "13.9.3",
    "@types/webpack": "4.41.8",
    "@types/webpack-dev-server": "3.10.1",
    "@typescript-eslint/eslint-plugin": "2.25.0",
    "@typescript-eslint/parser": "2.25.0",
    "babel-loader": "8.1.0",
    "babel-plugin-module-resolver": "4.0.0",
    "clean-webpack-plugin": "3.0.0",
    "core-js": "3.6.4",
    "cross-env": "7.0.2",
    "css-loader": "3.4.2",
    "css-modules-typescript-loader": "4.0.0",
    "cssnano": "4.1.10",
    "eslint": "6.8.0",
